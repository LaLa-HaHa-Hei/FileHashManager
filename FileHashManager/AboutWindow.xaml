<Window x:Class="FileHashManager.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileHashManager"
        mc:Ignorable="d"
        Title="关于" Height="200" Width="350" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="文件哈希管理器 v1.0.0" Margin="0,0,0,10"/>
            <TextBlock Text="作者: 代码见三" Margin="0,0,0,10"/>
            <TextBlock Text="GitHub: https://github.com/your-repo" TextDecorations="Underline" Foreground="Blue" Cursor="Hand" MouseLeftButtonUp="GitHubLink_Click"/>
        </StackPanel>
        <Button Content="OK" Width="75" Height="25" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10,10,20,20" Click="OkButton_Click"/>
    </Grid>
</Window>
